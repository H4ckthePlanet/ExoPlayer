<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
   android:layout_height="match_parent"
   >

   <!-- Nested layout positions display near top right but inside of an overscan-safe margin -->
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="27dp"
     android:layout_marginBottom="27dp"
     android:layout_marginLeft="48dp"
     android:layout_marginRight="48dp">

      <LinearLayout style="@style/GeekStatsContainer"
        android:id="@+id/geek_stats"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_width="480dp"
        android:layout_height="wrap_content">
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="2dp"
                 android:text="State:"/>
               <TextView style="@style/GeekStatsMetricText"
                 android:id="@+id/current_state"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView style="@style/GeekStatsMetricText"
              android:id="@+id/current_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"/>
         </RelativeLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="2dp"
                 android:text="Playing:"/>
               <TextView style="@style/GeekStatsMetricText"
                 android:id="@+id/current_level"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            </LinearLayout>
         </RelativeLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="2dp"
                 android:text="Loading:"/>
               <TextView style="@style/GeekStatsMetricText"
                 android:id="@+id/loading_level"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            </LinearLayout>
         </RelativeLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="2dp"
                 android:text="Playback Rate:"/>
               <TextView style="@style/GeekStatsMetricText"
                 android:id="@+id/playback_rate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            </LinearLayout>
         </RelativeLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="2dp"
                 android:text="Download (Cur/Avg/Min):"/>
               <TextView style="@style/GeekStatsMetricText"
                 android:id="@+id/bandwidth_stats"
                 android:layout_alignParentStart="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            </LinearLayout>
         </RelativeLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textColor="@color/colorBandwidth"
                 android:layout_marginRight="2dp"
                 android:text="Bandwidth"/>
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textColor="@color/colorLevel"
                 android:text="(Level)"/>
            </LinearLayout>
            <com.tivo.exoplayer.library.SimpleSlidingGraph
              android:id="@+id/bandwidth_graph"
              android:layout_width="300dp"
              android:layout_height="20dp"
              android:layout_alignParentEnd="true"/>
         </RelativeLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true">
               <TextView style="@style/GeekStatsMetricLabel"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginRight="2dp"
                 android:text="Buffered:"/>
               <TextView style="@style/GeekStatsMetricText"
                 android:id="@+id/buffering_level"
                 android:textColor="@color/colorBuffered"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"/>
            </LinearLayout>
            <com.tivo.exoplayer.library.SimpleSlidingGraph
              android:id="@+id/buffering_graph"
              android:layout_width="300dp"
              android:layout_height="20dp"
              android:layout_alignParentEnd="true"/>
         </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView style="@style/GeekStatsMetricText"
           android:id="@+id/manifest_url"
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:ellipsize="end"
           android:maxLines="1"
           android:layout_marginTop="2dp"/>
      </RelativeLayout>
     </LinearLayout>
   </RelativeLayout>
</RelativeLayout>